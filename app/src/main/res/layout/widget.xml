<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/widget_holder"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/app_label_holder">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/app_label"
                      android:textSize="22sp"
                      android:textColor="@color/white"
                      android:textFontWeight="1"
                      android:layout_centerHorizontal="true"
                      android:layout_centerInParent="true"
                      android:padding="3dp"
                      android:text="@string/mudiralmaham_label"
                      android:background="@color/colorPrimary"/>

            <ImageView android:layout_width="20dp" android:layout_height="40dp" android:src="@drawable/ic_action_btn"
                       android:id="@+id/add_task_widget"
                       android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        <ListView
                android:layout_below="@id/app_label_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/widget_list"
                android:background="@color/bg_color">

        </ListView>
    </RelativeLayout>
</FrameLayout>