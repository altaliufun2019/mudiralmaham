<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView android:id="@+id/widget_task_name" android:layout_width="wrap_content" android:textColor="@color/oil"
              android:layout_margin="6dp"
              android:layout_height="wrap_content" android:text="ITEM" android:textSize="16sp"/>
    <TextView android:id="@+id/widget_task_comment" android:layout_width="wrap_content" android:textColor="@color/base"
              android:layout_marginLeft="10dp"
              android:layout_height="wrap_content" android:text="ITEM" android:layout_below="@id/widget_task_name"
              android:textSize="10sp"/>
    <TextView android:id="@+id/widget_due_date" android:layout_width="wrap_content" android:textColor="@color/oil"
              android:layout_margin="6dp"
              android:layout_marginTop="8dp"
              android:layout_height="wrap_content" android:text="ITEM" android:textSize="14sp"
              android:layout_alignParentEnd="true"/>

</RelativeLayout>