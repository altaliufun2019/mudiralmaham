<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/menu_list_item_height">
    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
               app:layout_constraintStart_toStartOf="parent" android:src="@drawable/ic_checked_done_18"
               android:id="@+id/menu_item_icon"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:text="efefefefefeef" tools:layout_editor_absoluteY="0dp"
              android:id="@+id/menu_item_title"
              app:layout_constraintStart_toEndOf="@+id/menu_item_icon" android:layout_marginStart="8dp"
              app:layout_constraintEnd_toStartOf="@+id/menu_item_number" android:layout_marginEnd="8dp"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:id="@+id/menu_item_number"
              android:text="5"
              android:textColor="@color/aluminum" tools:layout_editor_absoluteY="-16dp"
              android:layout_marginEnd="6dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>