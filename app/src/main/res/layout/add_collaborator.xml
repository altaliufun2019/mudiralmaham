<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/round_bg"
                android:theme="@style/AppTheme.ProgressBar"
>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/collaborator_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/MyHintText"
    >
        <EditText android:id="@+id/collaborator_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:theme="@style/MyEditText"
                  android:hint="put name"
                  android:autofillHints="put name"/>
    </android.support.design.widget.TextInputLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_collaborator_btn"
            android:text="@string/add_collaborator"
            android:textColor="@color/white"
            android:background="@color/colorAccentGreen"
            android:layout_below="@id/collaborator_holder"
    />
</RelativeLayout>