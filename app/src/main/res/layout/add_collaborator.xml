<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/round_bg"
                android:theme="@style/AppTheme.ProgressBar"
>
    <android.support.design.widget.TextInputLayout
            android:id="@+id/collaborator_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/MyHintText"
    >
        <EditText android:id="@+id/input_description"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:theme="@style/MyEditText"
                  android:hint="put name"
                  android:autofillHints="put name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.button.MaterialButton android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:text="@string/add_collaborator"
                                                  android:layout_below="@id/collaborator_holder"
    />
</RelativeLayout>